{
  // open json editor for settings
  "workbench.settings.editor": "json",
  // Theme
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "material-icon-theme",
  // Change font
  "editor.fontFamily": "MesloLGS Nerd Font Mono",
  "scm.inputFontFamily": "MesloLGS Nerd Font Mono",
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
  "chat.editor.fontFamily": "MesloLGS Nerd Font Mono",
  "debug.console.fontFamily": "MesloLGS Nerd Font Mono",
  "editor.codeLensFontFamily": "MesloLGS Nerd Font Mono",
  "notebook.output.fontFamily": "MesloLGS Nerd Font Mono",
  "markdown.preview.fontFamily": "MesloLGS Nerd Font Mono",
  "editor.inlayHints.fontFamily": "MesloLGS Nerd Font Mono",
  // Font size
  "editor.fontSize": 15,
  "terminal.integrated.fontSize": 15,
  // ui
  "editor.minimap.enabled": true,
  "window.commandCenter": false,
  "editor.scrollbar.vertical": "auto",
  "window.titleBarStyle": "custom",
  "editor.scrollbar.horizontal": "auto",
  // Misc
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.stickyScroll.enabled": true,
  "git.autofetch": true,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "breadcrumbs.filePath": "off",
  "files.trimTrailingWhitespace": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "window.zoomLevel": 1,
  "files.associations": {
    "*.river": "hcl",
    "inventory": "properties",
    ".env": "shellscript",
    "**/.ssh/config*": "shellscript",
    "*.ejson": "json"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  // Plugin: YAML
  "yaml.maxItemsComputed": 50000,
  "redhat.telemetry.enabled": false,
  // Plugin: GitLab Workflow
  "gitlab.duoChat.enabled": false,
  // Plugin: GitHub Copilot
  "github.copilot.enable": {
    "*": false
  },
  // Plugin: Peek Hidden Files
  "files.exclude": {
    "**/.git": true,
    "**/.gitignore": true,
    "**/.ansible-lint": true,
    "**/.editorconfig": true,
    "**/.markdownlint.yaml": true,
    "**/.pre-commit-config.yaml": true,
    "**/.shellcheckrc": true,
    "**/.yamllint.yaml": true,
    "**/ansible.cfg": true,
    "**/LICENSE": true,
    "**/requirements.yaml": true,
    "**/renovate.json": true,
    "**/.vscode": true
  },
  // Plugin: ShellCheck
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": "explicit"
  },
  "shellcheck.ignorePatterns": {
    "**/.ssh/config*": true,
  },
  "gitlab.duoCodeSuggestions.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "search.quickOpen.includeHistory": true,
  "search.exclude": {
    "/var/**": true
  }
}